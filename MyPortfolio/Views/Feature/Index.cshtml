@model List<MyPortfolio.DAL.Entities.Feature>

@{
    ViewData["Title"] = "Öne Çıkanlar";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Öne Çıkan Alanlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Öne Çıkanlar Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Öne çıkanlar bölümü ile ilgili bilgileri aşağıdaki panelden yönetebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FeatureId</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Feature/CreateFeature/" class="btn btn-primary">Yeni Öne Çıkan Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>