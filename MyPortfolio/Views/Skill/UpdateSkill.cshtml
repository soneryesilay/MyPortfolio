@model MyPortfolio.DAL.Entities.Skill

@{
    ViewData["Title"] = "Yetenek Bilgisini Güncelle";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yetenek Bilgisini Güncelle</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yetenek Güncelleme Formu</div>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="UpdateSkill" asp-controller="Skill">
                            <input type="hidden" asp-for="SkillId" />
                            <div class="form-group">
                                <label asp-for="Title">Yetenek Adı</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Örn: C#, ASP.NET Core, HTML">
                            </div>
                            <div class="form-group">
                                <label asp-for="Value">Değer (0-100)</label>
                                <input type="number" class="form-control" asp-for="Value" min="0" max="100" placeholder="Yetenek seviyesini 0-100 arası giriniz">
                                @* Alternatif olarak range input kullanılabilir:
                                   <input type="range" class="form-range" asp-for="Value" min="0" max="100">
                                *@
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn btn-success">Güncelle</button>
                                <a href="/Skill/Index" class="btn btn-danger">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>