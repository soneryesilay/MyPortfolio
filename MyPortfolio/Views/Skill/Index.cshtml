@model List<MyPortfolio.DAL.Entities.Skill>

@{
    ViewData["Title"] = "Yeteneklerim";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yetenekler</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yetenek Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yetenekler bölümü ile ilgili bilgileri aşağıdaki panelden yönetebilirsiniz.
                        </div>
                        <table class="table table-striped mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Yetenek Adı</th>
                                    <th scope="col">Değer (%)</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SkillId</td>
                                        <td>@item.Title</td>
                                        <td>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" style="width: @item.Value%;" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100">@item.Value%</div>
                                            </div>
                                        </td>
                                        <td><a href="/Skill/DeleteSkill/@item.SkillId" class="btn btn-danger btn-sm">Sil</a></td>
                                        <td><a href="/Skill/UpdateSkill/@item.SkillId" class="btn btn-success btn-sm">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Skill/CreateSkill/" class="btn btn-primary">Yeni Yetenek Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>