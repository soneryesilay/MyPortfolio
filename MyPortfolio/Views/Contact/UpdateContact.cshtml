@model MyPortfolio.DAL.Entities.Contact

@{
    ViewData["Title"] = "İletişim Bilgisini Güncelle";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İletişim Bilgisini Güncelle</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İletişim Güncelleme Formu</div>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="UpdateContact" asp-controller="Contact">
                            <input type="hidden" asp-for="ContactId" />
                            <div class="form-group">
                                <label asp-for="Title">Başlık</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Başlık Giriniz">
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" placeholder="Açıklama Giriniz">
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone1">Telefon 1</label>
                                <input type="text" class="form-control" asp-for="Phone1" placeholder="Telefon 1 Giriniz">
                            </div>
                            <div class="form-group">
                                <label asp-for="Phone2">Telefon 2 (Opsiyonel)</label>
                                <input type="text" class="form-control" asp-for="Phone2" placeholder="Telefon 2 Giriniz">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email1">Email 1</label>
                                <input type="email" class="form-control" asp-for="Email1" placeholder="Email 1 Giriniz">
                            </div>
                            <div class="form-group">
                                <label asp-for="Email2">Email 2 (Opsiyonel)</label>
                                <input type="email" class="form-control" asp-for="Email2" placeholder="Email 2 Giriniz">
                            </div>
                            <div class="form-group">
                                <label asp-for="Address">Adres</label>
                                <textarea rows="3" class="form-control" asp-for="Address" placeholder="Adres Giriniz"></textarea>
                            </div>
                            <div class="card-action">
                                <button type="submit" class="btn btn-success">Güncelle</button>
                                <a href="/Contact/Index" class="btn btn-danger">İptal</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>