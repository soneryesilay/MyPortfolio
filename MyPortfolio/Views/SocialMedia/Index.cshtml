@model List<MyPortfolio.DAL.Entities.SocialMedia>

@{
    ViewData["Title"] = "Sosyal Medya Hesapları";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Hesapları Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal medya hesapları ile ilgili bilgileri aşağıdaki panelden yönetebilirsiniz.
                        </div>
                        <table class="table table-striped mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Platform</th>
                                    <th scope="col">İkon</th>
                                    <th scope="col">URL</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.SocialMediaId</td>
                                        <td>@item.Title</td>
                                        <td><i class="@item.Icon"></i> (@item.Icon)</td> @* İkonu göster ve sınıf adını yazdır *@
                                        <td><a href="@item.Url" target="_blank">@item.Url</a></td>
                                        <td><a href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaId" class="btn btn-danger btn-sm">Sil</a></td>
                                        <td><a href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaId" class="btn btn-success btn-sm">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/SocialMedia/CreateSocialMedia/" class="btn btn-primary">Yeni Sosyal Medya Hesabı Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>